<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Column">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_app_bar"
        style="@style/TopAppBar.BottomSheet"
        app:title="@string/sleep_timer" />

    <TextView
        android:id="@+id/minutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_medium"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_size_xl" />

    <SeekBar
        android:id="@+id/seek_bar"
        style="@style/SeekBar"
        android:layout_marginTop="@dimen/size_normal" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/shouldFinishLastAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_normal"
        android:layout_marginTop="@dimen/size_normal"
        android:text="@string/finish_last_audio" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start"
        style="@style/Button.BottomSheet"
        android:text="@string/start" />

</LinearLayout>
