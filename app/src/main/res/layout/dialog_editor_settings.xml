<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Column"
    android:paddingBottom="@dimen/size_normal">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_app_bar"
        style="@style/TopAppBar.BottomSheet"
        app:title="@string/editor_settings" />

    <include
        android:id="@+id/line_numbers"
        layout="@layout/view_list_item" />

    <include
        android:id="@+id/wrap_content"
        layout="@layout/view_list_item" />

    <include
        android:id="@+id/syntax_highlight"
        layout="@layout/view_list_item" />


</LinearLayout>
